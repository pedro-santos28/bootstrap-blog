<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <div class="container">
  <%= turbo_frame_tag "posts" do%>
    <div class="row">
      <div class="col ">
        <p class="bg-secondary p-2 text-dark fw-bold">Title</p>
      </div>

      <div class="col">
        <p class="bg-secondary p-2 text-dark fw-bold">
          <%= link_to "Date", posts_path(sort: @order), class: "text-dark text-decoration-none" %>
        </p>
        
      </div>

      <div class="col">
        <p class="bg-secondary p-2 text-dark fw-bold">Actions</p>
      </div>
    </div>
    <% @posts.each do |post| %>
      <div class="row my-3">
        <div class="col px-4">
          <%= link_to post.title, post_path(post), class: "text-dark" %>
        </div>

        <div class="col px-4">
          <%= post.created_at.to_date %>
        </div>

        <div class="col px-4 d-flex gap-2">
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary" %>
          <%= button_to "Delete", post_path(post), method: :delete, class: "btn btn-danger"%>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>

<%= link_to "New post", new_post_path, class: "btn btn-primary" %>
